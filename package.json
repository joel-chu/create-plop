{
  "name": "create-plop",
  "version": "0.2.0",
  "description": "Quick scarfold a project with plop.js integration",
  "main": "index.mjs",
  "type": "module",
  "files": [
    "src",
    "index.mjs",
    "plopfile.js"
  ],
  "scripts": {
    "test": "ava",
    "crt": "DEBUG=create-plop:* NODE_ENV=dev node ./index.mjs",
    "dev": "FAKE_DEST=vue2 pnpm crt",
    "prepublishOnly": "pnpm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joel-chu/create-plop.git"
  },
  "keywords": [
    "plop",
    "node",
    "project",
    "scarfold",
    "javascript"
  ],
  "author": "Joel Chu <joelchu@foxmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joel-chu/create-plop/issues"
  },
  "homepage": "https://github.com/joel-chu/create-plop#readme",
  "dependencies": {
    "@jsonql/utils": "^1.2.1",
    "debug": "^4.3.4",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "minimist": "^1.2.6",
    "plop": "^3.1.1"
  },
  "devDependencies": {
    "ava": "^4.3.0"
  },
  "ava": {
    "files": [
      "tests/**/*.test.mjs"
    ],
    "verbose": true,
    "tap": false,
    "failFast": true
  },
  "bin": {
    "create-plop": "./index.mjs"
  }
}
